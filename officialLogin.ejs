        function toggleFormFields() {
    const officerId = document.querySelector('input[name="officerId"]').value.trim().toLowerCase();

    // Hide all divs by default
    document.getElementById("stateDiv").style.display = "none";
    document.getElementById("districtDiv").style.display = "none";
    document.getElementById("mandalDiv").style.display = "none";
    document.getElementById("villageDiv").style.display = "none";

    // Show relevant divs based on officerId
    if (officerId === 'state') {
        document.getElementById("stateDiv").style.display = "block";
    } else if (officerId === 'district') {
        document.getElementById("districtDiv").style.display = "block";
    } else if (officerId === 'mandal') {
        document.getElementById("mandalDiv").style.display = "block";
        document.getElementById("villageDiv").style.display = "block";
    }
}

        document.getElementById('adminLink').addEventListener('click', function (e) {
    e.preventDefault(); // Prevent default link behavior

    // Show the password prompt
    document.getElementById('adminPromptDiv').style.display = 'block';
});

document.getElementById('adminSubmitButton').addEventListener('click', function () {
    const enteredPassword = document.getElementById('adminPasswordInput').value.trim();

    if (enteredPassword === '123') {
        window.location.href = 'http://localhost:5000/admin/pending-applications'; // Redirect to the admin page
    } else { 
        alert('Invalid Password'); // Show error for incorrect password
    }
});

