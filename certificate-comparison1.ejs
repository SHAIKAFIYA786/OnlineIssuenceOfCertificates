<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Certificate Comparison - All States, Districts, and Mandals</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
        .container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-template-rows: auto;
            gap: 10px;
            padding: 10px;
            height: 100vh;
        }
        .chart-container {
            width: 100%;
            height: 30vh; /* Adjust for smaller graphs */
            display: flex;
            justify-content: center;
            align-items: center;
        }
        canvas {
            width: 100% !important;
            height: auto !important;
        }
        h2 {
            grid-column: 1 / -1;
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

<div class="container">
    <h2>Certificate Comparison - All States, Districts, and Mandals</h2>
    
    <!-- State Chart -->
    <div class="chart-container">
        <canvas id="stateChart"></canvas>
    </div>
    
    <!-- District Chart -->
    <div class="chart-container">
        <canvas id="districtChart"></canvas>
    </div>
    
    <!-- Mandal Chart -->
    <div class="chart-container">
        <canvas id="mandalChart"></canvas>
    </div>
</div>

<script>
    const stateData = {
        labels: ['State 1', 'State 2'],
        datasets: [
            {
                label: 'Caste Certificate',
                data: [
                    <%= results.states.state1 ? results.states.state1.caste : 0 %>,
                    <%= results.states.state2 ? results.states.state2.caste : 0 %>
                ],
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            },
            {
                label: 'Income Certificate',
                data: [
                    <%= results.states.state1 ? results.states.state1.income : 0 %>,
                    <%= results.states.state2 ? results.states.state2.income : 0 %>
                ],
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            },
            {
                label: 'EWS Certificate',
                data: [
                    <%= results.states.state1 ? results.states.state1.ews : 0 %>,
                    <%= results.states.state2 ? results.states.state2.ews : 0 %>
                ],
                backgroundColor: 'rgba(255, 159, 64, 0.2)',
                borderColor: 'rgba(255, 159, 64, 1)',
                borderWidth: 1
            }
        ]
    };

    const districtData = {
        labels: ['District 1', 'District 2'],
        datasets: [
            {
                label: 'Caste Certificate',
                data: [
                    <%= results.districts.district1 ? results.districts.district1.caste : 0 %>,
                    <%= results.districts.district2 ? results.districts.district2.caste : 0 %>
                ],
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            },
            {
                label: 'Income Certificate',
                data: [
                    <%= results.districts.district1 ? results.districts.district1.income : 0 %>,
                    <%= results.districts.district2 ? results.districts.district2.income : 0 %>
                ],
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            },
            {
                label: 'EWS Certificate',
                data: [
                    <%= results.districts.district1 ? results.districts.district1.ews : 0 %>,
                    <%= results.districts.district2 ? results.districts.district2.ews : 0 %>
                ],
                backgroundColor: 'rgba(255, 159, 64, 0.2)',
                borderColor: 'rgba(255, 159, 64, 1)',
                borderWidth: 1
            }
        ]
    };

    const mandalData = {
        labels: ['Mandal 1', 'Mandal 2'],
        datasets: [
            {
                label: 'Caste Certificate',
                data: [
                    <%= results.mandals.mandal1 ? results.mandals.mandal1.caste : 0 %>,
                    <%= results.mandals.mandal2 ? results.mandals.mandal2.caste : 0 %>
                ],
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            },
            {
                label: 'Income Certificate',
                data: [
                    <%= results.mandals.mandal1 ? results.mandals.mandal1.income : 0 %>,
                    <%= results.mandals.mandal2 ? results.mandals.mandal2.income : 0 %>
                ],
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            },
            {
                label: 'EWS Certificate',
                data: [
                    <%= results.mandals.mandal1 ? results.mandals.mandal1.ews : 0 %>,
                    <%= results.mandals.mandal2 ? results.mandals.mandal2.ews : 0 %>
                ],
                backgroundColor: 'rgba(255, 159, 64, 0.2)',
                borderColor: 'rgba(255, 159, 64, 1)',
                borderWidth: 1
            }
        ]
    };

    const stateChart = new Chart(document.getElementById('stateChart'), {
        type: 'bar',
        data: stateData,
        options: { responsive: true, maintainAspectRatio: false }
    });

    const districtChart = new Chart(document.getElementById('districtChart'), {
        type: 'bar',
        data: districtData,
        options: { responsive: true, maintainAspectRatio: false }
    });

    const mandalChart = new Chart(document.getElementById('mandalChart'), {
        type: 'bar',
        data: mandalData,
        options: { responsive: true, maintainAspectRatio: false }
    });
</script>
</body>
</html>
