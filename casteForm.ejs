<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Caste Certificate Portal</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #74ebd5, #9face6);
            color: #333;
            line-height: 1.6;
            margin: 0;
        }

        header {
            background: #4A90E2;
            color: white;
            padding: 15px 20px;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            height: 10vh;
        }

        main {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        .form-section {
            width: 90%;
            max-width: 800px;
            margin: 20px 0;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #4A90E2;
            margin-bottom: 20px;
            font-size: 22px;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        label {
            font-size: 14px;
            color: #333;
            margin-bottom: 5px;
        }

        input,
        select {
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
            font-size: 14px;
            width: 100%;
        }

        input:focus,
        select:focus {
            border-color: #4A90E2;
            outline: none;
            box-shadow: 0 0 5px rgba(74, 144, 226, 0.5);
        }

        button {
            padding: 12px;
            background: #4A90E2;
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 16px;
            cursor: pointer;
            font-weight: bold;
            transition: background 0.3s ease;
        }

        button:hover {
            background: #357ABD;
        }

        footer {
            text-align: center;
            margin-top: 30px;
            padding: 10px 0;
            background: #4A90E2;
            color: white;
            font-size: 14px;
        }

        @media (max-width: 768px) {
            h2 {
                font-size: 20px;
            }

            label {
                font-size: 13px;
            }

            input,
            select {
                font-size: 13px;
            }
        }
    </style>
</head>

<body>
    <header>
        Online Caste Certificate Portal
    </header>
    <main>
        <section class="form-section">
            <h2>Get Eligibility To Apply for a Caste certificate</h2>
            <form id="verifyCasteForm" onsubmit="return verifyCaste(event)">
                <label for="aadhaar">Aadhaar Number:</label>
                <input type="text" id="aadhaar" name="aadhaar" required pattern="[2-9]{1}[0-9]{11}"
                    title="Aadhaar number should be 12 digits, starting with a digit from 2-9">

                <label for="fatherCaste">Father's Caste:</label>
                <input type="text" id="fatherCaste" name="fatherCaste" required oninput="autoFillCaste()">

                <label for="motherCaste">Mother's Caste:</label>
                <input type="text" id="motherCaste" name="motherCaste" required>

                <label for="caste">Caste (auto-filled):</label>
                <input type="text" id="caste" name="caste" readonly>

                <button type="submit">Verify Caste Details</button>
            </form>

            <!-- Success Message -->
            <p id="verificationMessage" style="color: green; display: none;">Verification successful! You can now apply
                for a caste certificate.</p>
        </section>

        <!-- Application Form -->
        <section class="form-section" id="applyCasteFormSection" style="display: none;">
            <h2>Apply for Caste Certificate</h2>
            <form id="applyCasteForm" action="/api/users/apply/caste" method="POST">
                <label for="state">State:</label>
                <select id="state" name="state" required onchange="populateDistricts()">
                    <option value="">Select State</option>
                    <option value="state1">State 1</option>
                    <option value="state2">State 2</option>
                </select>

                <label for="district">District:</label>
                <select id="district" name="district" required onchange="populateMandals()">
                    <option value="">Select District</option>
                </select>

                <label for="mandal">Mandal:</label>
                <select id="mandal" name="mandal" required>
                    <option value="">Select Mandal</option>
                </select>

                <label for="village">Village (Optional):</label>
                <select id="village" name="village">
                    <option value="">Select Village</option>
                </select>

                <label for="caste">Caste:</label>
                <input type="text" id="caste" name="caste" required readonly>

                <label for="dob">Date of Birth:</label>
                <input type="date" id="dob" name="dob" required>

                <label for="address">Permanent Address:</label>
                <input type="text" id="address" name="address" required>

                <button type="submit">Apply for Caste Certificate</button>
            </form>
        </section>
    </main>
    <footer>
        © 2024 Online Caste Certificate Portal. All rights reserved.
    </footer>

    <script>
        function populateDistricts() {
            const state = document.getElementById('state').value;
            const districtSelect = document.getElementById('district');
            districtSelect.innerHTML = '<option value="">Select District</option>';

            const districts = state === 'state1' ? ['district1', 'district2'] : ['district3', 'district4'];
            districts.forEach(district => {
                const option = document.createElement('option');
                option.value = district;
                option.text = district.charAt(0).toUpperCase() + district.slice(1);
                districtSelect.appendChild(option);
            });
        }

        function populateMandals() {
            const district = document.getElementById('district').value;
            const mandalSelect = document.getElementById('mandal');
            mandalSelect.innerHTML = '<option value="">Select Mandal</option>';

            const mandals = district === 'district1' ? ['mandal1', 'mandal2'] : ['mandal3', 'mandal4'];
            mandals.forEach(mandal => {
                const option = document.createElement('option');
                option.value = mandal;
                option.text = mandal.charAt(0).toUpperCase() + mandal.slice(1);
                mandalSelect.appendChild(option);
            });

            document.getElementById('village').innerHTML = '<option value="">Select Village</option>';
        }

        document.getElementById('mandal').addEventListener('change', function () {
            const mandal = this.value;
            const villageSelect = document.getElementById('village');
            villageSelect.innerHTML = '<option value="">Select Village</option>';
            const villages = mandal === 'mandal1' ? ['village1', 'village2'] :
                mandal === 'mandal2' ? ['village3', 'village4'] :
                    mandal === 'mandal3' ? ['village5', 'village6'] :
                        mandal === 'mandal4' ? ['village7', 'village8'] : [];

            villages.forEach(village => {
                const option = document.createElement('option');
                option.value = village;
                option.text = village.charAt(0).toUpperCase() + village.slice(1);
                villageSelect.appendChild(option);
            });
        });

        function verifyCaste(event) {
            event.preventDefault();

            const aadhaar = document.getElementById('aadhaar').value;
            const fatherCaste = document.getElementById('fatherCaste').value;
            const motherCaste = document.getElementById('motherCaste').value;

            if (aadhaar && fatherCaste && motherCaste) {
                document.getElementById('caste').value = fatherCaste.toLowerCase();
                document.getElementById('verificationMessage').style.display = 'block';
                document.getElementById('applyCasteFormSection').style.display = 'block';
            } else {
                alert('Please fill in all required fields for verification.');
            }
        }

        function autoFillCaste() {
            const fatherCaste = document.getElementById('fatherCaste').value;
            document.getElementById('caste').value = fatherCaste.toLowerCase();
        }
    </script>
</body>

</html>